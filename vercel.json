{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/video-info",
      "dest": "/api/video-info.js"
    },
    {
      "src": "/api/download",
      "dest": "/api/download.js"
    },
    {
      "src": "/api/formats",
      "dest": "/api/formats.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ],
  "buildCommand": "cd api && npm install && npm run install-ytdlp && cd ../client && npm install && npm run build",
  "installCommand": "npm install && cd server && npm install && cd ../api && npm install && cd ../client && npm install"
}

