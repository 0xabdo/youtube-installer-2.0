{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/video-info",
      "dest": "/api/video-info.js"
    },
    {
      "src": "/api/download",
      "dest": "/api/download.js"
    },
    {
      "src": "/api/formats",
      "dest": "/api/formats.js"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}

